<main id="main" class="main">

    <div class="pagetitle">
        <h1>Edit {{room.roomname}} </h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/admin">Home</a></li>
                <li class="breadcrumb-item">Rooms</li>
                <li class="breadcrumb-item active">Edit Room</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->
    <section class="section">
        <div class="row">
            <div class="col-lg-7">
                <div class="card">
                    <div class="card-body">
                        {{!-- <h5 class="card-title">Multi Columns Form</h5> --}}

                        <!-- Multi Columns Form -->
                        <form class="row g-3 mt-3" action="/admin/edit-room/{{room._id}}" enctype="multipart/form-data"
                            method="POST">
                            <div class="col-md-6">
                                <label for="inputName5" class="form-label">Room Name</label>
                                <input type="text" class="form-control" name="roomname" value="{{room.roomname}}"
                                    id="inputName5">
                            </div>
                            <div class="col-md-6">
                                <label for="inputName5" class="form-label">Room Number</label>
                                <input type="text" class="form-control" name="roomnumber" value="{{room.roomnumber}}"
                                    id="inputName5">
                            </div>
                            <div class="col-md-12">
                                <label for="inputName5" class="form-label">Est Cost</label>
                                <input type="text" class="form-control" name="Price" value="{{room.Price}}"
                                    id="inputName5">
                            </div>

                            <p><b>Est Time</b></p>
                            <hr class="mt-0 mb-0">
                            <div class="col-md-6">
                                <label for="inputName5" class="form-label">From (Check in)</label>
                                <input type="time" class="form-control" name="in" value="{{room.in}}" id="inputName5">
                            </div>
                            <div class="col-md-6">
                                <label for="inputName5" class="form-label">To (Check out)</label>
                                <input type="time" class="form-control" name="out" value="{{room.out}}" id="inputName5">
                            </div>
                            <div class="col-md-6">
                                <label for="inputEmail5" class="form-label">Floor</label>
                                <input type="text" class="form-control" name="floor" value="{{room.floor}}"
                                    id="inputEmail5">
                            </div>
                            <div class="col-md-6">
                                <label for="inputPassword5" class="form-label">Room Emergency Number</label>
                                <input type="number" name="ren" class="form-control" value="{{room.ren}}"
                                    id="inputPassword5">
                            </div>

                            <div class="col-md-12">
                                <label for="inputEmail5" class="form-label">Description</label>
                                <textarea type="text" class="form-control" name="desc" value="{{room.desc}}"
                                    id="inputEmail5"></textarea>
                            </div>


                            <div class="col-md-12">
                                <label for="inputEmail5" class="form-label">List Fesilities</label>
                                <textarea type="text" class="form-control" name="fesilities"
                                    id="inputEmail5">{{room.fesilities}}</textarea>
                            </div>


                    </div>
                </div>

            </div>

            <div class="col-lg-5">
                <div class="card p-3">
                    <div class="card-body">
                        <label class="mb-3">Upload Photos</label>
                        <input type="file" name="Image1" class="form-control mb-3" id="inputPassword5">

                        <img src="/images/room-images/{{room._id}}-1.png" alt=""
                            style="width: 6rem; margin-bottom: 8px;" id="imgView">

                        <hr>

                        <input type="file" name="Image2" class="form-control mb-3" id="inputPassword5">
                        <img src="/images/room-images/{{room._id}}-2.png" alt=""
                            style="width: 6rem; margin-bottom: 8px;" id="imgView">

                        <hr>

                        <input type="file" name="Image3" class="form-control mb-3" id="inputPassword5">
                        <img src="/images/room-images/{{room._id}}-3.png" alt=""
                            style="width: 6rem; margin-bottom: 8px;" id="imgView">

                        <hr>

                        <input type="file" name="Image4" class="form-control mb-3" id="inputPassword5">
                        <img src="/images/room-images/{{room._id}}-4.png" alt=""
                            style="width: 6rem; margin-bottom: 8px;" id="imgView">

                        <hr>

                        <input type="file" name="Image5" class="form-control mb-3" id="inputPassword5">
                        <img src="/images/room-images/{{room._id}}-5.png" alt=""
                            style="width: 6rem; margin-bottom: 8px;" id="imgView">

                        <hr>

                    </div>
                </div>
            </div>


        </div>

    </section>
    <div class="mb-4" style="float: inline-end;
">
        <button type="submit" class="btn btn-primary">Submit</button>
        <a href="/admin/rooms/all-rooms" class="btn btn-secondary">Cancel</a>
    </div>
    </form>


</main><!-- End #main -->